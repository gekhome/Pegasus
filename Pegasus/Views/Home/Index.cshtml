<style>
    .rcorners {
        border-radius: 8px;
        background: lightgray;
        padding: 20px;
        width: 200px;
        height: 190px;
    }

    p.serif {
        font-family: "Times New Roman", Times, serif;
        font-size: medium;
    }

    p.sansserif {
        font-family: "Segoe UI", Arial, Helvetica, sans-serif;
        font-size: medium;
    }

    .button {
        background-color: #3f6ea6;
        border: none;
        border-radius: 4px;
        color: white;
        padding: 8px 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin: 2px 2px;
        min-width: 160px;
        transition-duration: 0.5s;
        cursor: pointer;
    }

    .button:hover {
        background-color: #2a496f;
        color: white;
    }

    .button span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
    }

    .button span:after {
        content: '\00bb';
        position: absolute;
        opacity: 0;
        top: 0;
        right: -20px;
        transition: 0.5s;
    }

    .button:hover span {
        padding-right: 20px;
        color: white;
    }

    .button:hover span:after {
        opacity: 1;
        right: 0;
        color: white;
    }

    .nava:link {
        color: lightgray;
        background-color: transparent;
        text-decoration: none;
    }

    .nava:visited {
        color: whitesmoke;
        background-color: transparent;
        text-decoration: none;
    }

    .nava:hover {
        color: whitesmoke;
        background-color: transparent;
        text-decoration: none;
    }

    .nava:active {
        color: whitesmoke;
        background-color: transparent;
        text-decoration: none;
    }
</style>

