@model Pegasus.Models.UserTeacherViewModel

@{
    ViewBag.Title = "Είσοδος χρήστη";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        .k-textbox {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.428571429;
            color: #555555;
            vertical-align: middle;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
            -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
            transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        }

        .k-textbox:focus {
            border-color: #66afe9;
            outline: 0;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
        }
    </style>
</head>
<body>
    <p style="padding:20px 10px 20px 10px"></p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <fieldset>
                <legend style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Καρτέλα εισόδου εκπαιδευτικού</legend>

                <table class="col-md-8" style="border:solid;border-width:thin;margin:10px 0px 10px 0px">
                    <tr>
                        <th style="background-color:#1D7CAE;padding-left:20px">
                            <p></p>
                            <img src="~/Images/metro/user-login-white.png" width="60" height="60" style="margin:0px 20px 0px 10px" />
                            <font style="font-family:'Segoe UI';font-size:xx-large;color:white;">Είσοδος</font>
                            <p></p>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <p></p>
                            <div class="form-group" style="margin-left:1px">
                                @Html.LabelFor(model => model.USERNAME, new { @class = "control-label col-md-5" })
                                <div class="col-md-5">
                                    <label class="form-control smartShortText" style="min-height:20px;width:300px; background-color:#EEE"
                                           title="@Model.USERNAME">@Html.Raw(Model.USERNAME)</label>
                                </div>
                            </div>
                            <p></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p></p>
                            <div class="form-group" style="margin-left:1px">
                                @Html.LabelFor(model => model.PASSWORD, new { @class = "control-label col-md-5" })
                                <div class="col-md-5">
                                    <label class="form-control smartShortText" style="min-height:20px;width:300px; background-color:#EEE"
                                           title="@Model.PASSWORD">@Html.Raw(Model.PASSWORD)</label>
                                </div>
                            </div>
                            <p></p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p></p>
                            <div class="form-group" style="margin-left:1px;margin-top:20px">
                                @Html.LabelFor(model => model.USER_AFM, new { @class = "control-label col-md-5" })
                                <div class="col-md-5">
                                    <label class="form-control smartShortText" style="min-height:20px;width:300px; background-color:#EEE"
                                           title="@Model.USER_AFM">@Html.Raw(Model.USER_AFM)</label>
                                </div>
                            </div>
                            <p></p>
                        </td>
                    </tr>
                </table>

                    <div class="form-group">
                        <div style="float:left;" class="col-md-12">
                            <input style="font-family:'Segoe UI';font-size:18px" type="submit" value="Είσοδος" class="btn btn-default" />
                            <span style="margin:0px 5px 5px 5px;font-family:'Segoe UI';font-size:18px">
                                @Html.ActionLink("Αρχική", "Index", "Home", null, new { @class = "btn btn-default", style = "font-size:18px", target = "_blank" })
                            </span>

                        </div>
                    </div>
        </fieldset>
    </div>
    }

</body>

</html>
