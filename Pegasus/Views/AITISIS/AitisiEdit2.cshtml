@model Pegasus.Models.AitisisViewModel

@{
    ViewBag.Title = "Επεξεργασία αίτησης";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    int aitisiID = Model.AITISI_ID;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row" style="margin:5px 5px 5px 5px">
        <div style="margin:5px 60px 5px 60px">
            <span style="font-family:'Segoe UI';font-size:large;text-shadow:1px 1px #8c8c8c;float:left">
                <font style="color:#494949;font-family:'Segoe UI'">Καρτέλα ηλεκτρονικής αίτησης</font>
                <label style="font-style:italic;color:red;font-size:16px;text-shadow:0px 0px #8c8c8c;margin-left:20px">(τα πεδία με * είναι υποχρεωτικά)</label>
            </span>
            <span style="margin:0px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">@Html.ActionLink("Επιστροφή", "ListAitisis", "AITISIS", null, new { @class = "btn btn-warning", style = "font-size:14px" })</span>
            <span style="margin:0px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">
                @Html.ActionLink("Εκτύπωση", "AitisiPrint", "AITISIS", new { AITISI_ID = Model.AITISI_ID }, new { @class = "btn btn-primary", style = "font-size:14px", target = "_blank" })
            </span>
            <span style="margin:0px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">
                <input style="font-family:'Segoe UI';font-size:14px" type="submit" value="Αποθήκευση" class="btn btn-success" />
            </span>
        </div>
    </div>

    @Html.EditorForModel("AitisiEditor")

    if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible body-content" role="alert" style="margin:10px 60px 10px 60px">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>@Html.ValidationSummary()</strong>
        </div>
    }
}
